<div class="container-fluid d-flex p-0">

    <div class=" card col-3 p-0" style="background: rgb(148, 171, 201);">
        <div class="card-body">
            <div class="list-group">
                <div class="list-group-item list-group-item-action" id="Room1" style="cursor: pointer;">Room1</div>
                <div class="list-group-item list-group-item-action" id="Room2" style="cursor: pointer;">Room2</div>
                <div class="list-group-item list-group-item-action" id="Room3" style="cursor: pointer;">Room3</div>
                <div class="list-group-item list-group-item-action" id="Room4" style="cursor: pointer;">Room4</div>
            </div>
        </div>
    </div>

    <div class="card col-9 p-0">
        <div style="display: none" id="username">{{name}}</div>
        <div style="display: none" id="userEmail">{{email}}</div>

        <div style="height: 3.5rem; background: rgb(148, 171, 201);" class="card-header d-flex justify-content-center">
            <img style="max-height: 100%; max-width: 20%;" src="/header_image.png">Chat App
            <form class="form-inline my-2 my-lg-0" action="/logout" method="GET">
                <button type="submit" class="btn btn-primary mx-2" id="logoutBtn">Logout</button>
            </form>

            <div id="roomName"></div>
            
        </div>
        <!-- <div id="header" style="height: 3.5rem; background: rgb(148, 171, 201); width: 100%;" class="card-header d-flex justify-content-center"></div> -->
        <div id="msgArea" style="height: 80vh; background-image: url('/background_image.png');" class="card-body msg-area"></div>
    
    
        <div style="height: 4rem; background-color: rgb(148, 171, 201)" class="card-footer ">
            <div style="max-width:100%" class="input-group mb-3 ml-2">
                <input id="messageInp" type="text" class="form-control" placeholder="Type a message"
                    aria-label="Recipient's username" aria-describedby="basic-addon2">
                <div class="input-group-append">
                    <input id="imageFile" type="file" name="image" style="display: none;" accept="image/*"
                        onchange="sendImage(this);">
                    <button class="col-4 btn-light btn" id="attachBtn" onclick="chooseImage()"><i class="fas fa-camera mr-3"
                            style="font-size: larger;"></i></button>
                    <button id="btnSubmit" class="btn btn-outline-light pl-4 pr-4" type="submit">Send</button>
                </div>
            </div>
        </div>
    </div>

</div>